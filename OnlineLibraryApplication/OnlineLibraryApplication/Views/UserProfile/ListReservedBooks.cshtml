@model IEnumerable<OnlineLibraryApplication.Models.UserHistory>

@{
    ViewBag.Title = "My Reserved Books";
}

<h2>My Reserved Books</h2>

<table class="table">
    <tr>
        
        <th>
            @Html.DisplayName("Book Title")
        </th>
        <th>
            @Html.DisplayName("Return Date")
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.BookStatus.BookInfo.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookStatus.ReturnDate)
        </td>
        
        <td>
            @Html.ActionLink("RETURN", "ReturnBook", "BookStatus", new { id = item.BookStatus_Id, hid = item.UserHistory_Id }, "") 
           
        </td>
    </tr>
}

</table>
